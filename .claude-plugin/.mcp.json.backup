      "command": "http",
      "url": "http://localhost:8001/mcp",
      "headers": {
        "Accept": "application/json, text/event-stream",
        "Content-Type": "application/json"
      },
      "env": {
        "WEAVIATE_HOST": "10.5.9.199",
        "WEAVIATE_PORT": "8181",
        "WEAVIATE_GRPC_PORT": "50051"
      },
      "timeout": 30000,
      "retry": {
        "retries": 3,
        "factor": 2,
        "minTimeout": 1000
      }
    }
  }
}
