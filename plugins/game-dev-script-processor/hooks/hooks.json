{
  "description": "游戏开发剧本处理器插件钩子 - 确保 do-config 命令遵守策划配表访问规则",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check_config_access.js ${TOOL_NAME} ${TOOL_INPUT}",
            "error_message": "do-config 命令禁止直接操作策划配表，必须使用 MCP Server"
          }
        ]
      }
    ]
  }
}